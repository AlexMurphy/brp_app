{
  "name": "BRP",
  "version": "0.0.0",
  "main": "app.js",
  "description": "The BRP application",
  "scripts": {
    "start": "node .",
    "dev": "parallelshell 'NODE_ENV=development DEBUG=* nodemon .' 'npm run watch:scss' 'npm run copy:images'",
    "watch:scss": "nodemon -e scss -x 'npm run sass'",
    "test": "NODE_ENV=test mocha",
    "test:acceptance": "cd acceptance_tests/; bundle install && cucumber",
    "test:ci": "npm run lint && npm run style && npm run test",
    "lint": "eslint .",
    "copy:images": "mkdir -p ./dist; cp -r ./assets/images ./dist/images",
    "style": "jscs **/*.js --config=./.jscsrc.json",
    "quality": "plato -r -x 'node_modules|reports|test' -d reports/plato .",
    "postinstall": "npm run sass",
    "sass": "node-sass ./assets/scss/app.scss ./dist/css/app.css --include-path ./node_modules"
  },
  "author": "HomeOffice",
  "dependencies": {
    "aws-sdk": "^2.1.35",
    "body-parser": "^1.13.0",
    "express": "^4.12.4",
    "express-partial-templates": "^0.1.0",
    "hmpo-form-wizard": "^1.0.1",
    "hmpo-frontend-toolkit": "^1.2.1",
    "hmpo-govuk-template": "0.0.3",
    "hmpo-model": "^0.1.2",
    "hmpo-template-mixins": "^0.6.0",
    "hogan-express-strict": "^0.5.4",
    "i18n-future": "^0.1.4",
    "i18n-lookup": "^0.1.0",
    "node-sass": "^3.2.0",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "chai": "^3.0.0",
    "debug": "^2.2.0",
    "eslint": "^0.23.0",
    "eslint-plugin-filenames": "^0.1.1",
    "eslint-plugin-mocha": "^0.2.2",
    "eslint-plugin-one-variable-per-var": "0.0.3",
    "jscs": "^1.13.1",
    "mocha": "^2.2.5",
    "mocha-junit-reporter": "^1.4.0",
    "mocha-multi": "^0.7.1",
    "parallelshell": "^1.1.1",
    "plato": "^1.5.0",
    "pre-commit": "^1.0.10",
    "proxyquire": "^1.5.0",
    "sinomocha": "^0.2.4",
    "sinon": "^1.15.3",
    "sinon-chai": "^2.8.0"
  },
  "pre-commit": [
    "lint",
    "style",
    "test"
  ]
}
